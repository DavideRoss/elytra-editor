doctype
html
    head
        script(type="text/javascript", src="/libs/angular.min.js")
        script(type="text/javascript", src="/libs/angular-route.min.js")
        script(type="text/javascript", src="/libs/angular-resource.min.js")
        script(type="text/javascript", src="/libs/three.min.js")
        script(type="text/javascript", src="/libs/lodash.min.js")
        script(type="text/javascript", src="/libs/async.min.js")
        script(type="text/javascript", src="/libs/OrbitControls.js")

        script(type="text/javascript", src="js/app.js")

        link(rel="stylesheet", href="/css/normalize.min.css")
        link(rel="stylesheet", href="/css/style.css")

    body(ng-app="App")
        .controls-bar(ng-show="!showInput")
            button(ng-click="showInput = true") Load...
            button(ng-click="loadExample('chair.json')") Load chair
            button(ng-click="loadExample('cauldron.json')") Load cauldron
        three.three-render(model="model", lock-controls="!showInput", errors="errors")
        .errors-container(ng-show="!showInput && showErrors")
            p(ng-repeat="error in errors track by $index") {{error}}
        .input-container(ng-show="showInput")
            textarea(ng-model="inputJson", placeholder="Put your JSON model file here")
            .controls
                .errors
                    span {{jsonError}}
                .buttons
                    button(ng-click="showInput = false") Cancel
                    button(ng-click="loadJson()") Load
